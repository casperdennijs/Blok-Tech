<!-- URL: / of /sign-in -->
<body class="start">
    <section>
        <img src="/static/img/logo.png">
        <form action="/login" method="POST">
            <h1>Inloggen</h1>
            <input type="text" id="username" name="username" placeholder="Jouw gebruikersnaam...">
            <input type="password" id="password" name="password" placeholder="Jouw wachtwoord..">
            <label id="error"></label>
            <a href="#">Wachtwoord vergeten?</a>
            <input type="submit" value="Inloggen">
        </form>
        <p>Heb je nog geen account? <a href="/sign-up">Meld je aan!</a></p>
    </section>
    <script src="/static/js/login.js"></script>
</body>